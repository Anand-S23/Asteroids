// Includes 
#include "common.h"

// Definitions
#define SCREEN_WIDTH   1280
#define SCREEN_HEIGHT  720

App app;
Entity player;


// Main Loop 
int main(int argc, char* argv)
{
    memset(&app, 0, sizeof(App));
    memset(&player, 0, sizeof(Entity));
    
    initSDL();

    player.x = 100;
    player.y = 100;
    player.angle = 0;
    player.texture = loadTexture("assests/player.png");
	
    atexit(cleanup);
	
    while (1)
    {
        prepareScene();
	doInput();

	// Player movement 
	if (app.up)
	{
	    player.y -= (4*sin(player.angle));
	    player.x += (4*cos(player.angle));
	    printf("UP: %lf %lf %lf\n", sin(player.angle), cos(player.angle), player.angle);
	}
	if (app.down)
	{
	    player.y += (4*sin(player.angle));
	    player.x -= (4*cos(player.angle));
	    printf("DOWN: %lf %lf %lf\n", sin(player.angle), cos(player.angle), player.angle); 
	}
	if (app.right)
	{
	    player.angle += 4; 
	    if (player.angle >= 360)
	    {
		player.angle = player.angle - 360;
	    }
	}
        if (app.left)
	{
	    player.angle -= 4;
	    if (player.angle <= -360)
	    {
		player.angle = -360 - player.angle;
	    }
	}

	blitRotated(player.texture, player.x, player.y, player.angle);
        presentScene();		
	SDL_Delay(16);
    }

    return 0;
}
